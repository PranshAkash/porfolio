@page "/contact"
@inject IPortfolioService PortfolioService

@{
    var personalInfo = PortfolioService.GetPersonalInfo();
}

<!-- Contact Hero Section -->
<section class="section" style="padding-top: 2rem;">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="animate-fade-in-up">Get In Touch</h1>
            <p class="text-secondary animate-fade-in-up">Let's discuss your next project or collaboration opportunity</p>
        </div>
    </div>
</section>

<!-- Contact Information -->
<section class="section">
    <div class="container">
        <div class="grid grid-2 mb-5">
            <div>
                <h2 class="mb-4">Let's Work Together</h2>
                <p class="mb-4 text-secondary">
                    I'm always interested in new opportunities and exciting projects. Whether you need a full-stack developer, 
                    want to discuss a collaboration, or just want to say hello, I'd love to hear from you.
                </p>
                
                <div class="contact-specialties mb-4">
                    <h4 class="text-primary mb-3">I Can Help With:</h4>
                    <ul class="specialties-list">
                        <li><i class="fas fa-check-circle text-success me-2"></i>Full-stack web application development</li>
                        <li><i class="fas fa-check-circle text-success me-2"></i>API design and integration</li>
                        <li><i class="fas fa-check-circle text-success me-2"></i>Database design and optimization</li>
                        <li><i class="fas fa-check-circle text-success me-2"></i>Cloud deployment and DevOps</li>
                        <li><i class="fas fa-check-circle text-success me-2"></i>System architecture and scalability</li>
                        <li><i class="fas fa-check-circle text-success me-2"></i>Legacy system modernization</li>
                        <li><i class="fas fa-check-circle text-success me-2"></i>Technical consulting and code review</li>
                    </ul>
                </div>
                
                <div class="availability-status">
                    <div class="status-indicator">
                        <div class="status-dot available"></div>
                        <span class="status-text">Currently available for new projects</span>
                    </div>
                </div>
            </div>
            
            <div class="contact-info">
                <div class="contact-item">
                    <div class="contact-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="contact-details">
                        <h5>Email</h5>
                        <p><a href="mailto:@personalInfo.Email">@personalInfo.Email</a></p>
                        <small class="text-secondary">I typically respond within 24 hours</small>
                    </div>
                </div>
                
                <div class="contact-item">
                    <div class="contact-icon">
                        <i class="fas fa-phone"></i>
                    </div>
                    <div class="contact-details">
                        <h5>Phone</h5>
                        <p><a href="tel:@personalInfo.Phone">@personalInfo.Phone</a></p>
                        <small class="text-secondary">Available during business hours (IST)</small>
                    </div>
                </div>
                
                <div class="contact-item">
                    <div class="contact-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="contact-details">
                        <h5>Location</h5>
                        <p>@personalInfo.Location</p>
                        <small class="text-secondary">Open to remote work opportunities</small>
                    </div>
                </div>
                
                <div class="contact-item">
                    <div class="contact-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="contact-details">
                        <h5>Response Time</h5>
                        <p>Usually within 24 hours</p>
                        <small class="text-secondary">Monday - Friday, 9 AM - 6 PM IST</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Social Media & Professional Networks -->
<section class="section section-alt">
    <div class="container">
        <div class="text-center mb-5">
            <h2>Connect With Me</h2>
            <p class="text-secondary">Find me on various platforms</p>
        </div>
        
        <div class="grid grid-4">
            <a href="@personalInfo.LinkedIn" class="social-card linkedin" target="_blank">
                <div class="social-icon">
                    <i class="fab fa-linkedin-in"></i>
                </div>
                <h5>LinkedIn</h5>
                <p>Professional network and career updates</p>
            </a>
            
            <a href="@personalInfo.GitHub" class="social-card github" target="_blank">
                <div class="social-icon">
                    <i class="fab fa-github"></i>
                </div>
                <h5>GitHub</h5>
                <p>Code repositories and open source contributions</p>
            </a>
            
            <a href="@personalInfo.Twitter" class="social-card twitter" target="_blank">
                <div class="social-icon">
                    <i class="fab fa-twitter"></i>
                </div>
                <h5>Twitter</h5>
                <p>Tech insights and industry discussions</p>
            </a>
            
            <a href="mailto:@personalInfo.Email" class="social-card email">
                <div class="social-icon">
                    <i class="fas fa-envelope"></i>
                </div>
                <h5>Email</h5>
                <p>Direct communication for projects</p>
            </a>
        </div>
    </div>
</section>

<!-- FAQ Section -->
<section class="section">
    <div class="container">
        <div class="text-center mb-5">
            <h2>Frequently Asked Questions</h2>
            <p class="text-secondary">Quick answers to common questions</p>
        </div>
        
        <div class="grid grid-2">
            <div class="faq-item">
                <h5 class="faq-question">
                    <i class="fas fa-question-circle text-primary me-2"></i>
                    What is your typical project timeline?
                </h5>
                <p class="faq-answer">
                    Project timelines vary based on complexity, but most web applications take 2-8 weeks. 
                    I provide detailed estimates after understanding your requirements.
                </p>
            </div>
            
            <div class="faq-item">
                <h5 class="faq-question">
                    <i class="fas fa-question-circle text-primary me-2"></i>
                    Do you work with remote teams?
                </h5>
                <p class="faq-answer">
                    Yes! I have extensive experience working remotely and collaborating with distributed teams 
                    using modern communication and project management tools.
                </p>
            </div>
            
            <div class="faq-item">
                <h5 class="faq-question">
                    <i class="fas fa-question-circle text-primary me-2"></i>
                    What technologies do you specialize in?
                </h5>
                <p class="faq-answer">
                    I specialize in .NET Core, C#, React, and Azure cloud services. I also work with various databases, 
                    DevOps tools, and modern web technologies.
                </p>
            </div>
            
            <div class="faq-item">
                <h5 class="faq-question">
                    <i class="fas fa-question-circle text-primary me-2"></i>
                    Do you provide ongoing support?
                </h5>
                <p class="faq-answer">
                    Absolutely! I offer maintenance, updates, and technical support for projects I develop. 
                    I believe in long-term partnerships with my clients.
                </p>
            </div>
            
            <div class="faq-item">
                <h5 class="faq-question">
                    <i class="fas fa-question-circle text-primary me-2"></i>
                    Can you work with existing codebases?
                </h5>
                <p class="faq-answer">
                    Yes, I can work with legacy systems, perform code reviews, and help modernize existing applications 
                    using current best practices and technologies.
                </p>
            </div>
            
            <div class="faq-item">
                <h5 class="faq-question">
                    <i class="fas fa-question-circle text-primary me-2"></i>
                    What's your preferred communication method?
                </h5>
                <p class="faq-answer">
                    I'm flexible with communication preferences. Email works great for detailed discussions, 
                    while calls or video meetings are perfect for complex planning sessions.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="section section-alt">
    <div class="container">
        <div class="cta-section text-center">
            <h2 class="mb-4">Ready to Start Your Project?</h2>
            <p class="mb-4 text-secondary">
                Let's discuss how I can help bring your ideas to life with clean, scalable, and modern solutions.
            </p>
            <div class="cta-buttons">
                <a href="mailto:@personalInfo.Email" class="btn btn-primary btn-lg">
                    <i class="fas fa-paper-plane"></i>
                    Send Me an Email
                </a>
                <a href="tel:@personalInfo.Phone" class="btn btn-outline btn-lg">
                    <i class="fas fa-phone"></i>
                    Give Me a Call
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    .text-primary { color: var(--primary-color) !important; }
    .text-secondary { color: var(--text-secondary) !important; }
    .text-success { color: var(--success-color) !important; }
    .mb-2 { margin-bottom: 0.5rem; }
    .mb-3 { margin-bottom: 1rem; }
    .mb-4 { margin-bottom: 1.5rem; }
    .mb-5 { margin-bottom: 2rem; }
    .me-2 { margin-right: 0.5rem; }
    
    .specialties-list {
        list-style: none;
        padding-left: 0;
    }
    
    .specialties-list li {
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        line-height: 1.5;
    }
    
    .availability-status {
        padding: 1rem;
        background: rgba(16, 185, 129, 0.1);
        border-radius: 0.75rem;
        border-left: 4px solid var(--success-color);
    }
    
    .status-indicator {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .status-dot {
        width: 0.75rem;
        height: 0.75rem;
        border-radius: 50%;
        animation: pulse 2s infinite;
    }
    
    .status-dot.available {
        background: var(--success-color);
    }
    
    @@keyframes pulse {
        0% { opacity: 1; }
        50% { opacity: 0.5; }
        100% { opacity: 1; }
    }
    
    .status-text {
        font-weight: 600;
        color: var(--success-color);
    }
    
    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }
    
    .contact-item {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        padding: 1.5rem;
        background: var(--bg-primary);
        border-radius: 0.75rem;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
    }
    
    .contact-item:hover {
        border-color: var(--primary-color);
        box-shadow: var(--shadow-md);
    }
    
    .contact-icon {
        width: 3rem;
        height: 3rem;
        background: var(--primary-color);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        flex-shrink: 0;
    }
    
    .contact-details h5 {
        margin-bottom: 0.5rem;
        color: var(--text-primary);
    }
    
    .contact-details p {
        margin-bottom: 0.25rem;
        color: var(--text-primary);
    }
    
    .contact-details a {
        color: var(--primary-color);
        text-decoration: none;
    }
    
    .contact-details a:hover {
        text-decoration: underline;
    }
    
    .contact-details small {
        font-size: 0.875rem;
    }
    
    .social-card {
        display: block;
        text-decoration: none;
        color: inherit;
        background: var(--bg-primary);
        border: 2px solid var(--border-color);
        border-radius: 1rem;
        padding: 2rem 1.5rem;
        text-align: center;
        transition: all 0.3s ease;
    }
    
    .social-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-lg);
        text-decoration: none;
        color: inherit;
    }
    
    .social-card.linkedin:hover {
        border-color: #0077b5;
    }
    
    .social-card.github:hover {
        border-color: #333;
    }
    
    .social-card.twitter:hover {
        border-color: #1da1f2;
    }
    
    .social-card.email:hover {
        border-color: var(--primary-color);
    }
    
    .social-icon {
        width: 4rem;
        height: 4rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin: 0 auto 1rem auto;
        transition: all 0.3s ease;
    }
    
    .social-card.linkedin .social-icon {
        background: #0077b5;
        color: white;
    }
    
    .social-card.github .social-icon {
        background: #333;
        color: white;
    }
    
    .social-card.twitter .social-icon {
        background: #1da1f2;
        color: white;
    }
    
    .social-card.email .social-icon {
        background: var(--primary-color);
        color: white;
    }
    
    .social-card h5 {
        margin-bottom: 0.5rem;
        color: var(--text-primary);
    }
    
    .social-card p {
        margin-bottom: 0;
        color: var(--text-secondary);
        font-size: 0.9rem;
    }
    
    .faq-item {
        background: var(--bg-primary);
        border: 1px solid var(--border-color);
        border-radius: 0.75rem;
        padding: 1.5rem;
        margin-bottom: 1rem;
    }
    
    .faq-question {
        margin-bottom: 1rem;
        color: var(--text-primary);
        font-weight: 600;
        display: flex;
        align-items: center;
    }
    
    .faq-answer {
        margin-bottom: 0;
        color: var(--text-secondary);
        line-height: 1.6;
    }
    
    .cta-section {
        padding: 3rem;
        background: linear-gradient(135deg, rgba(37, 99, 235, 0.1), rgba(245, 158, 11, 0.1));
        border-radius: 1rem;
        border: 1px solid var(--border-color);
    }
    
    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }
    
    .btn-lg {
        padding: 1rem 2rem;
        font-size: 1.1rem;
    }
    
    @@media (max-width: 768px) {
        .grid {
            grid-template-columns: 1fr;
        }
        
        .cta-buttons {
            flex-direction: column;
            align-items: center;
        }
        
        .cta-buttons .btn {
            width: 100%;
            max-width: 300px;
        }
    }
</style>
